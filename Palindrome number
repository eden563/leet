class Solution {
    public boolean isPalindrome(int x) {
        String str1=String.valueOf(x);
        int len=str1.length(), j=0;
        if(x<0){
            return false;
        } 
        for(int i=len-1;i>0;i--){
            if(str1.charAt(i)==str1.charAt(j))
            j++;
            else{
              return false;
            } 
        }
        return true;
    }
}
